{{ section.settings.banner_liquid }}
<h1>Hello World</h1>
<section class="banner-section">
  <div class="banner-content">
    <h1 class="banner-title">{{ section.settings.banner_title }}</h1>
    <p class="banner-description">{{ section.settings.banner_description }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
  </div>
</section>

{% schema %}
{
   "name": "Banner Liquid",
   "settings": [
   {
      "type": "text",
      "label": "Banner Title",
      "id": "banner_title",
      "default": "Your Title Here"
    },
    {
      "type": "textarea",
      "label": "Banner Description",
      "id": "banner_description",
      "default": "This is a description text"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Click Me"
    },
   ],
   "presets": [
   {
      "name": "Banner Liquid"
   }]
}
{% endschema %}