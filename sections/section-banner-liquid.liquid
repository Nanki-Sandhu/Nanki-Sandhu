{{ section.settings.banner_liquid }}
<h1>Hello World</h1>
<section class="banner-flex-section">
  <div class="banner-flex-content">
    <!-- Flex Container for Heading, Text, and Button -->
    <div class="banner-flex-items">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-text">{{ section.settings.text }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    </div>
    
    <!-- Full-Width Image at the Bottom -->
    <div class="banner-image">
      <h1>Hello World</h1>
    </div>
  </div>

  <style>
    .banner-flex-section {
      width: 100%;
      background-color: #f0f0f0; /* Set background color if needed */
    }

    .banner-flex-content {
      padding: 40px 20px;
    }

    .banner-flex-items {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 20px;
      margin-bottom: 30px;
    }

    .banner-heading {
      font-size: 2.5rem;
      font-weight: bold;
      color: #333;
      flex: 1;
    }

    .banner-text {
      font-size: 1.25rem;
      color: black;
      flex: 2;
    }

    .banner-button {
      background-color: yellow;
      color: black;
      padding: 12px 25px;
      font-size: 1rem;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .banner-button:hover {
      background-color: #0056b3;
    }

    .banner-image {
      margin-top: 20px;
    }

    .banner-img {
      width: 100%;
      height: auto;
      display: block;
    }
  </style>
</section>

{% schema %}
{
   "name": "Banner Liquid",
   "settings": [
  {
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default": "TISSO VISSON"
    },
    {
      "type": "textarea",
      "label": "Text",
      "id": "text",
      "default": "Find the ideal git for your loved ones"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Choose Gift"
    },
   
   ],
   "presets": [
   {
      "name": "Banner Liquid"
   }]
}
{% endschema %}