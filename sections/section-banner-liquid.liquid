{{ section.settings.banner_liquid }}
<section class="banner-flex-section">
  <div class="banner-flex-content">
    <!-- Flex Container for Heading, Text, and Button -->
    <div class="banner-flex-items">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-text">{{ section.settings.text }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    </div>
    
    <!-- Full-Width Image at the Bottom -->
    <div class="banner-image" style="background-image: url('{{ section.settings.image | image_url: '1600x' }}');">
      <!-- Optional: You can add text or any other content over the image -->
       <div class="banner-content">
        <h1 class="banner-heading">{{ section.settings.headingImg }}</h1>
        <p class="banner-text">{{ section.settings.textImg }}</p>
        <a href="#" class="banner-button">{{ section.settings.button_text_img }}</a>
      </div>
    </div>
    <div  class="banner-bottom">
        <p>{{ section.settings.imgBtm }}</p>
      </div>
  </div>
  

  <style>
    .banner-flex-section {
      width: 100%;
      background-color: #f0f0f0; /* Set background color if needed */
    }

    .banner-flex-content {
      padding: 40px 20px;
    }

    .banner-flex-items {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 20px;
      margin-bottom: 30px;
    }

    .banner-heading {
      font-size: 2.5rem;
      font-weight: bold;
      color: #333;
      flex: 1;
    }

    .banner-text {
      font-size: 1.25rem;
      color: black;
      flex: 2;
    }

    .banner-button {
      background-color: yellow;
      color: black;
      padding: 12px 25px;
      font-size: 1rem;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .banner-button:hover {
      background-color: #0056b3;
    }

   .banner-image {
  margin-top: 20px;
  width: 100%;
  height: 400px; /* Adjust the height of the image section */
  background-size: cover;
  background-position: center center;
  display: block;
     border: 1px solid black;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 20px;
  width: 50%;
  background-color: yellow; /* Black background */
  color: white; /* White text color for readability */
  padding: 20px;
  text-align: left;
}

.banner-heading {
  font-size: 3rem;
  font-weight: bold;
  margin-bottom: 10px;
  color: black;
}

.banner-text {
  font-size: 1.30rem;
  margin-bottom: 15px;
  color: black;
}

.banner-button {
  background-color: black;
  color: white;
  padding: 10px 20px;
  font-size: 1.3rem;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.banner-button:hover {
  background-color: #0056b3;
}
    .banner-bottom{
      text-align:center;
      color: black;
    }
  </style>
</section>

