{{ section.settings.banner_liquid }}
<section class="banner-flex-section">
  <div class="banner-flex-content">
    <!-- Flex Container for Heading, Text, and Button -->
    <div class="banner-flex-items">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-text">{{ section.settings.text }}</p>
      <a href="#" class="banner-button">{{ section.settings.button_text }}</a>
    </div>

    <div
      class="banner-image"
      style="background-image: url('https://cdn.shopify.com/s/files/1/0728/7252/6061/files/7fa22b41cff7074c1b04a267142d6d5c.jpg?v=1733843388');"
    >
      <!-- Optional: You can add text or any other content over the image -->
      <div class="banner-content">
        <h1 class="banner-heading">{{ section.settings.headingImg }}</h1>
        <p class="banner-text">{{ section.settings.textImg | newline_to_br }}</p>
        <a href="#" class="banner-button">{{ section.settings.button_text_img }}</a>
      </div>
    </div>
    <div class="banner-bottom">
      <p>{{ section.settings.imgBtm }}</p>
    </div>
  </div>

  <style>
               .banner-flex-section {
                 width: 100%;
                 background-color: #f0f0f0;
               }

               .banner-flex-content {
                 padding: 40px 20px;
               }

               .banner-flex-items {
                 display: flex;
                 justify-content: space-between;
                 align-items: center;
                 gap: 20px;
                 margin-bottom: 30px;
               }

               .banner-heading {
                 font-size: 2.5rem;
                 font-weight: bold;
                 color: #333;
                 flex: 1;
               }

               .banner-text {
                 font-size: 1.25rem;
                 color: black;
                 flex: 2;
               }

               .banner-button {
                 background-color: yellow;
                 color: black;
                 padding: 12px 25px;
                 font-size: 1rem;
                 text-decoration: none;
                 border-radius: 5px;
                 transition: background-color 0.3s ease;
               }

               .banner-button:hover {
                 background-color: #0056b3;
               }

              .banner-image {
             margin-top: 20px;
             width: 100%;
             height: 400px;
             background-size: cover;
             background-position: center;
             display: block;
                padding:0;
                 position: relative;
           }

           .banner-content {
             position: absolute;
             bottom: 0;
             margin-left: 20px;
             width: 40%;
             background-color: white;
             color: black;
             padding: 20px;
             text-align: left;
           }

           .banner-heading {
             font-size: 3rem;
             font-weight: bold;
             margin-bottom: 10px;

           }

           .banner-text {
             font-size: 1.30rem;
             margin-bottom: 15px;

           }
        /* Basic styles for the button */
    .banner-button {
      position: relative;
      display: inline-block;
      background-color: black;
      color: white;
      padding: 10px 20px;
      font-size: 1.3rem;
      text-decoration: none;
      overflow: hidden;
      transition: color 0.4s ease; /* Transition for text color */
    }

    /* Add an empty pseudo-element that will animate for the yellow background */
    .banner-button::after {
      content: '';
      position: absolute;
      top: 0;
      left: 100%;
      right: 0;
      bottom: 0;
      background-color: yellow;
      transition: left 0.4s ease; /* Transition for yellow background from right to left */
    }

    /* On hover, change text color and animate the yellow background */
    .banner-button:hover {
      color: black; /* Change text color to black on hover */
    }

    .banner-button:hover::after {
      left: 0; /* Move the yellow background from right to left */
    }
        /*
           .banner-button {
             background-color: black;
             color: white;
             padding: 10px 20px;
             font-size: 1.3rem;
             text-decoration: none;
             transition: background-color 0.3s ease;
           }

           .banner-button:hover {
             background-color: #0056b3;
           }*/
               .banner-bottom{
                 text-align:center;
                 color: black;
               }
  </style>
</section>

